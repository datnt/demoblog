<h1>Categories</h1>

<div id="articles">
  <% @categories.each do |c| %>
    <h2>
      <%= link_to c.name, c %> |
      <%= link_to "Edit", edit_category_path(c) %> |
      <%= link_to 'Delete', category_path(c), :confirm => 'Are you sure want to delete this post?', :method => :delete, :title => 'Destroy'  %>
    </h2>
    <div class="content"><%= c.description %></div>
  <% end %>
</div>
